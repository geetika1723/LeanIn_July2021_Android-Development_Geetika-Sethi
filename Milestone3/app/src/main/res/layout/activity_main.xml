<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroudmil"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose categories that represent what you want to see !!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/food"
            android:layout_width="121dp"
            android:layout_height="129dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_button"
            android:drawableLeft="@drawable/ic_baseline_fastfood_24"
            android:text="Food"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/retail"
            android:layout_width="131dp"
            android:layout_height="102dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundbutton2"
            android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
            android:text="Retail"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/travel"
            android:layout_width="115dp"
            android:layout_height="128dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/roundbutton2"
            android:drawableLeft="@drawable/ic_baseline_airplane_ticket_24"
            android:text="Travel"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/sport"
            android:layout_width="wrap_content"
            android:layout_height="138dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_button"
            android:drawableLeft="@drawable/ic_baseline_sports_tennis_24"
            android:text="Sport"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/entertainment"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundbutton2"
        android:drawableLeft="@drawable/ic_baseline_music_note_24"
        android:text="Entertainment"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT ---->"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        />
</LinearLayout>